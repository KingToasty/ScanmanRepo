<Page
    x:Class="Scanman.LoginStudent"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Scanman"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <StackPanel VerticalAlignment="Center">
            <RelativePanel HorizontalAlignment="Stretch" Margin="0,0,0,0" VerticalAlignment="Stretch">
                <StackPanel x:Name="AdminLoginDetails" Margin="50,50,50,80" RelativePanel.AlignHorizontalCenterWithPanel="True" >
                    <Button Content="Barcode Login" Margin="50" HorizontalAlignment="Center"
                        Padding="5" Click="BarcodeLogin_Click" FontSize="24px" Style="{StaticResource ButtonRevealStyle}"/>
                    <Button Content="Manual Login" Margin="50" HorizontalAlignment="Center"
                        Padding="5" Click="ManualLogin_Click" FontSize="24px" Style="{StaticResource ButtonRevealStyle}"/>
                    <Button Content="Cancel" Margin="50" HorizontalAlignment="Center"
                        Padding="5" Click="GoBack_Click" FontSize="24px" Style="{StaticResource ButtonRevealStyle}"/>
                </StackPanel>
            </RelativePanel>
        </StackPanel>

    </Grid>
</Page>
